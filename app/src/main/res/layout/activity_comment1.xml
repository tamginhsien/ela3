<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Comment_1">

    <TextView
        android:id="@+id/rec_comment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/enter_comment1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/white"
        android:textColor="@color/black"
        android:hint="@string/rec_comment1"
        android:textColorHint="@color/black"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/enter_comment1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/rec_comment1"
        app:layout_constraintBottom_toTopOf="@+id/send_button1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/white"
        android:hint="@string/hint_enter_comment1"
        android:autofillHints="@string/hint_enter_comment1"
        android:inputType="text"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/send_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_button1"
        app:layout_constraintTop_toBottomOf="@+id/enter_comment1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>