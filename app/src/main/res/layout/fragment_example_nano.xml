<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_2">

    <TextView
        android:id="@+id/Submenu3_3Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttondesign2"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/buttonSubmenu3_3"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textIsSelectable="true"
        android:textSize="36sp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Submenu3_3Title"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:background="#F24682B4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.skydoves.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_example7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expandable_parentLayout="@layout/layout_example7_header"
                app:expandable_secondLayout="@layout/layout_example7_content"
                app:expandable_showSpinner="true"
                app:expandable_duration="300"
                app:expandable_spinner_color="@color/black"
                app:expandable_spinner_animate="true" />

            <com.skydoves.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_example8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expandable_parentLayout="@layout/layout_example8_header"
                app:expandable_secondLayout="@layout/layout_example8_content"
                app:expandable_showSpinner="true"
                app:expandable_duration="300"
                app:expandable_spinner_color="@color/black"
                app:expandable_spinner_animate="true" />

            <com.skydoves.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_example9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expandable_parentLayout="@layout/layout_example9_header"
                app:expandable_secondLayout="@layout/layout_example9_content"
                app:expandable_showSpinner="true"
                app:expandable_duration="300"
                app:expandable_spinner_color="@color/black"
                app:expandable_spinner_animate="true" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>