<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_comment_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comment_example_7"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_comment_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comment_example_8"
        android:layout_below="@id/btn_comment_7"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_comment_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comment_example_9"
        android:layout_below="@id/btn_comment_8"
        android:textSize="16sp" />

</RelativeLayout>